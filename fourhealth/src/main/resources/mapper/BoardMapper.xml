<!-- 프로모션 가져오기  -->
 	<select id="reportPromotionList" parameterType="String" resultType="MatchingUserTrainerDto">
		SELECT
			m.trainer_promotion_name AS 'trainerPromotionName'
		FROM
			tb_matching_user_trainer AS m
		WHERE
			m.user_id = #{userId};
 	</select>
