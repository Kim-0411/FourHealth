	<!-- 전체 신고 리스트 보여주기 -->
 	<select id="reportList" resultMap="resultMapUserReport">
		SELECT
		ur.report_user_code
		,ur.trainer_user_matching_code
		,ur.report_categories_code
		,ur.report_user_reason_detail
		,ur.report_user_reg_date
		FROM
		tb_user_report AS ur
